<div class='container'>


    <div class='row'>

        <div class='col-md-5'>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            <h5>{{this.id}}. {{this.burger_name}}
                                <form action='/burgers/updateOne/devour/{{this.id}}' method='POST'>
                                    <input type='hidden' name='devoured' value='true'>
                                    <button type='submit' class='btn btn-default'>Eat</button>
                                </form>
                            </h5>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class='col-md-2'></div>

        <div class='col-md-5'>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            <h5 class='text-muted'>{{this.id}}. {{this.burger_name}}</h5>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>


    </div> <!-- end third row -->

    <br><br>

    <div class='row'>

        <div class='col-md-12 text-center'>
            <form class='create-update-form' action='/burgers/insertOne' method='POST'>
                <div class='form-group'>
                    <textarea type='text' name='burger_name'></textarea><br>
                    <button class='btn btn-default' type='submit'>Submit</button>
                </div>
            </form>
        </div>


    </div> <!-- end fourth row -->


</div> <!-- end bootstrap container -->